UPBIT_API_KEY=your_upbit_api_key_here
UPBIT_SECRET_KEY=your_upbit_secret_key_here

# Optional: Custom server configuration
HOST=00T=880=false

# Optional: Logging configuration
LOG_LEVEL=INFO
LOG_FILE=trading_bot.log

